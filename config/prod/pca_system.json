{
	"__type__": "PCASystem",
	"stream_controller": {
		"__type__": "StreamController",
		"action": {
			"__type__": "EmailAction",
			"parameters": {
				"from_addr": "birpet4@gmail.com",
				"password": "",
				"smtp_addr": "smtp.gmail.com:587",
				"subject": "RaspberryPi ALERT",
				"to_addr": "birpet4@gmail.com",
				"user": "mt.raspberry.pi"
			}
		},
		"msg_limit": "100",
		"polling_interval": "3",
		"query": "@STREAM1@ and @STREAM2@"
	},
	"streams": [{
			"__type__": "Stream",
			"consumers": [{
					"__type__": "MotiondetectorConsumer",
					"parameters": {
						"area_threshold": 250,
						"dilate_iteration": 2,
						"resize_height": 360,
						"resize_width": 640,
						"threshold": 25,
						"threshold_max_val": 255,
						"timeout": 1
					}
				},
				{
					"__type__": "BodydetectorConsumer",
					"parameters": {
						"padding_x": 8,
						"padding_y": 8,
						"resize_height": 240,
						"resize_width": 320,
						"scale": 1.15,
						"timeout": 1,
						"win_stride_x": 4,
						"win_stride_y": 4
					}
				}
			],
			"name": "STREAM1",
			"producer": {
				"__type__": "CameraProducer",
				"parameters": {
					"device": 0,
					"unsuccessful_limit": 50,
					"wait_key_interval": 250,
					"zone": "kitchen"
				}
			}
		},
		{
			"__type__": "Stream",
			"consumers": [{
					"__type__": "MotiondetectorConsumer",
					"parameters": {
						"area_threshold": 250,
						"dilate_iteration": 2,
						"resize_height": 360,
						"resize_width": 640,
						"threshold": 25,
						"threshold_max_val": 255,
						"timeout": 1
					}
				},
				{
					"__type__": "FacedetectorConsumer",
					"parameters": {
						"cascade_file": "resources/haarcascade_frontalface_default.xml",
						"min_neighbors": 5,
						"scale_factor": 1.3,
						"timeout": 1
					}
				},
				{
					"__type__": "NnrecognizerConsumer",
					"parameters": {
						"model": "resources/model.h5py",
						"size": 128
					}
				}
			],
			"name": "STREAM2",
			"producer": {
				"__type__": "CameraProducer",
				"parameters": {
					"device": 0,
					"unsuccessful_limit": 50,
					"wait_key_interval": 250,
					"zone": "bedroom"
				}
			}
		},
		{
			"__type__": "Stream",
			"consumers": [
				{
					"__type__": "VoicerecognizerConsumer",
					"parameters": {
						"recognizer": "google",
						"api_key": "xxx",
						"language": "en-US",
						"threshold": 320
					}
				}
			],

			"name": "STREAM3",
			"producer": {
				"__type__": "MicrophoneProducer",
				"parameters": {
					"device":8,
					"sample_rate": 44100,
                                        "chunk_size":  512
				}
			}
		}
	]
}